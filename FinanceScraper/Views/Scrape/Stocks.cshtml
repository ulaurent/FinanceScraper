@model practicescrape.ViewModels.userStockListViewModel
@{
    ViewData["Title"] = "Stocks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Stocks</h2>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Symbol</th>
                <th scope="col">Market-time</th>
                <th scope="col">Last-Price</th>
                <th scope="col">Price-Change</th>
                <th scope="col">Percent-Change</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var stocks in Model.userStocks)
                {
                    <tr class="table-success">
                        <th scope="row">@stocks.StockSymbol</th>
                        <td>@stocks.MarketTime</td>
                        <td>@stocks.LastPrice</td>
                        <td>@stocks.PriceChange</td>
                        <td>@stocks.PercentChange</td>
                    </tr>
                 }
            </tbody>
    </table>
</div>
